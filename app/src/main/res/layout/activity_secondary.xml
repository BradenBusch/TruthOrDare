<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/baby_blue_magenta_ombre">

    <ImageButton
        android:id="@+id/backBtn"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:src="@drawable/ic_back_arrow"
        android:background="@android:color/transparent"/>

    <TextView
        android:id="@+id/t_or_f"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:text="beep"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/rndmPhrase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/t_or_f"
        android:gravity="center"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="beep"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="#000000"/>

    <Button
        android:id="@+id/truthButton2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Truth"
        android:layout_marginLeft="120dp"
        android:layout_marginRight="120dp"
        android:layout_above="@id/dareButton2"
        android:layout_marginBottom="30dp"
        android:textColor="@color/colorBabyBlue"
        android:background="@drawable/custom_button_baby_blue"
        android:textAllCaps="false"
        android:textSize="18sp"/>

    <Button
        android:id="@+id/dareButton2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dare"
        android:layout_marginLeft="120dp"
        android:layout_marginRight="120dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:textColor="@color/colorBabyBlue"
        android:background="@drawable/custom_button_baby_blue"
        android:textAllCaps="false"
        android:textSize="18sp"/>

</RelativeLayout>