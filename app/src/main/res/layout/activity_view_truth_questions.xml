<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/baby_blue_magenta_ombre">

    <RelativeLayout
        android:id="@+id/buttonContainer2"
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <ImageButton
            android:id="@+id/viewTruthQuestionBackBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_back_arrow"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"/>

        <Button
            android:id="@+id/viewDareQuestions"
            android:layout_width="match_parent"
            android:layout_marginRight="100dp"
            android:layout_marginLeft="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="View Dare Questions"
            android:textColor="@color/colorMagenta"
            android:textAllCaps="false"
            android:background="@drawable/custom_button_magenta" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/viewTruthQuestionBackBtn"
            android:layout_marginTop="60dp"
            android:layout_centerHorizontal="true"
            android:text="Viewing Truth Questions:"
            android:textStyle="bold"
            android:textSize="25sp"
            android:textColor="#000000"/>

    </RelativeLayout>

    <ListView
        android:id="@+id/truthQuestionsListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/buttonContainer2">
       <!-- android:background="@android:color/transparent"> -->
    </ListView>

</RelativeLayout>